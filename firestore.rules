rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Validate customer ID number (13 digits)
    function isValidIdNumber(idNumber) {
      return idNumber is string 
        && idNumber.matches('^\\d{13}$');
    }
    
    // Validate email format
    function isValidEmail(email) {
      return email is string 
        && email.matches('^[\\w\\.-]+@[\\w\\.-]+\\.\\w+$');
    }
    
    // Validate customer data
    function isValidCustomer(customer) {
      return customer.size() >= 5
        && 'idNumber' in customer
        && isValidIdNumber(customer.idNumber)
        && 'firstName' in customer
        && customer.firstName is string
        && customer.firstName.size() > 0
        && customer.firstName.size() <= 100
        && 'lastName' in customer
        && customer.lastName is string
        && customer.lastName.size() > 0
        && customer.lastName.size() <= 100
        && 'email' in customer
        && isValidEmail(customer.email)
        && 'address' in customer
        && customer.address is string
        && customer.address.size() >= 5
        && customer.address.size() <= 500;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      
      allow create: if isAuthenticated() 
        && isOwner(userId)
        && request.resource.data.email == request.auth.token.email;
      
      allow update: if isAuthenticated() 
        && isOwner(userId);
      
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Customers collection
    match /customers/{customerId} {
      // Create: authenticated, owns data, valid fields
      allow create: if isAuthenticated() 
        && request.resource.data.createdBy == request.auth.uid
        && isValidCustomer(request.resource.data);
      
      // Read: authenticated and owner
      allow read: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid;
      
      // Update: authenticated, owner, valid fields
      allow update: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid
        && request.resource.data.createdBy == request.auth.uid
        && isValidCustomer(request.resource.data);
      
      // Delete: authenticated and owner
      allow delete: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid;
    }
  }
}
